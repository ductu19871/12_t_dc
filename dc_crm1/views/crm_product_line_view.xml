<odoo>
    <record id="crm_product_line_view_form" model="ir.ui.view">
        <field name="name">crm_product_line.view.form</field>
        <field name="model">crm.product.line</field>
        <field name="arch" type="xml">
            <form string="a">
                <sheet>
                    <group>
                        <group>
                            <field name="product_id" />
                            <field name="categ_id" />
                            <field name="product_uom_qty" />
                            <field name="product_uom" />
                            <field name="price_unit" />
                            <field name="tax_id" readonly="0" widget="many2many_tags" />
                            <field name="discount" groups="sale.group_discount_per_so_line" />
                            <field name="price_subtotal" widget="monetary" />
                            <field name="price_total" widget="monetary" />
                            <field name="currency_id" />
                            <field name="company_id" />
                            <field name="is_win" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="crm_product_line_view_tree" model="ir.ui.view">
        <field name="name">crm_product_line.view.tree</field>
        <field name="model">crm.product.line</field>
        <field name="arch" type="xml">
            <tree string="a">
                <field name="product_id" />
                <field name="categ_id" />
                <field name="product_uom_qty" />
                <field name="product_uom" />
                <field name="price_unit" />
                <field name="tax_id" readonly="0" widget="many2many_tags" />
                <field name="discount" groups="sale.group_discount_per_so_line" />
                <field name="price_subtotal" widget="monetary" />
                <field name="price_total" widget="monetary" />
                <field name="currency_id" />
                <field name="company_id" />
                <field name="is_win" />
            </tree>
        </field>
    </record>

    <record id="crm_product_line_search" model="ir.ui.view">
        <field name="name">crm.product.line.search</field>
        <field name="model">crm.product.line</field>
        <field name="arch" type="xml">
            <search string="">
                <field name="product_id" />
                <field name="categ_id" />
                <field name="product_uom_qty" />
                <field name="product_uom" />
                <field name="price_unit" />
                <field name="tax_id" readonly="0" widget="many2many_tags" />
                <field name="discount" groups="sale.group_discount_per_so_line" />
                <field name="price_subtotal" widget="monetary" />
                <field name="price_total" widget="monetary" />
                <field name="currency_id" />
                <field name="company_id" />
                <field name="is_win" />
            </search>
        </field>
    </record>

