    <record id="action_crm_product_line" model="ir.actions.act_window">
        <field name="name">CRM Product</field>
        <field name="res_model">crm.product.line</field>
        <field name="view_mode">kanban,tree,form,graph,pivot</field>
    </record>


    <record id="crm_lead_view_pivot" model="ir.ui.view">
        <field name="name">crm.product.line.view.pivot</field>
        <field name="model">crm.product.line</field>
        <field name="arch" type="xml">
            <pivot string="Pipeline Analysis" disable_linking="True">
                <field name="create_date" interval="month" type="row" />
                <field name="is_win" type="col" />
                <field name="price_total" type="measure" />
            </pivot>
        </field>
    </record>

    <record id="crm_lead_view_graph" model="ir.ui.view">
        <field name="name">crm.product.line.view.graph</field>
        <field name="model">crm.product.line</field>
        <field name="arch" type="xml">
            <graph string="Opportunities">
                <field name="is_win" type="col" />
                <field name="product_id" type="row" />
            </graph>
        </field>
    </record>

    <menuitem
        id="menu_crm_product_line_action"
        name="Cơ hội theo sản phẩm"
        sequence="24"
        parent="crm.crm_menu_root"
        action="action_crm_product_line"
    />


</odoo>